<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_rounded_edge"
    android:padding="2dp" >

    <ImageButton
        android:id="@+id/btnWidgetConnct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:src="@drawable/ic_connected" />

    <ImageButton
        android:id="@+id/btnWidgetDisconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btnWidgetConnct"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_disconnected" />

</RelativeLayout>